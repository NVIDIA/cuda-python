#!/usr/bin/env bash

build_ci() {
    set -xeou pipefail

    cd "${REPO_DIR}"

    export CUDA_HOME="${CONDA_PREFIX}/targets/x86_64-linux"
    export PARALLEL_LEVEL=$(nproc --ignore 1)

    python setup.py build_ext --inplace
}

build_project() {
    set -xeou pipefail

    export PYTHONUNBUFFERED=1

    . setup-utils;
    init_build_env "$@";

    git config --global --add safe.directory "$REPO_DIR/.git"

    case "${BUILD_TYPE}" in
        ci) build_ci;;
        *) return 1;;
    esac
}

(build_project "$@");
